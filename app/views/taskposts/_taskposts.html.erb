<ul class="media-list">
	<% taskposts.each do |taskpost| %>
		<li class="media">
			<div class="media-body">
				<div>
					<%= link_to taskpost.user.name, user_path(taskpost.user) %> <span class="text-muted">posted at <%= taskpost.created_at %></span>
				</div>
				<div>
					<p><%= taskpost.content %></p>
				</div>
				<div>
					<% if current_user == taskpost.user %>
						<%= link_to "Delete", taskpost, method: :delete, data: { confirm: "いいですか？" }, class: 'btn btn-danger btn-xs' %>
					<% end %>
				</div>
			</div>
		</li>
	<% end %>
	<%= paginate taskposts %>
</ul>