<ul class="media-list">
	<% tasks.each do |task| %>
		<li class="media">
			<div class="media-body">
				<div>
					<%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
				</div>
					<p><%= task.content %> &lt; <%= task.status %></p>
			</div>
		</li>
	<% end %>
	<%= paginate tasks %>
</ul>